---
// IMPORTS ASTRO ATOMS
import HeadingFourWhite from "../../atoms/heading/four/White.astro"

const { title, description, order } = Astro.props
---
<div class="space-y-6">
    <div class="flex gap-2 items-center relative">
        <div class="bg-body size-7"></div>
        <div class="text-white font-lato absolute left-2.5 top-1.5">{ order }</div>
        <HeadingFourWhite>{ title }</HeadingFourWhite>
    </div>
    <p class="text-lg text-white font-lato">{ description }</p>
</div>
