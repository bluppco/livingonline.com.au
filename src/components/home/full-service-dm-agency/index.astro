---
// IMPORTS MARKED
import { marked } from "marked"

// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO COMPONENTS
import TitleDescription from "@/components/home/title-description/index.astro"

// IMPORTS ASTRO ATOMS
import PrimaryButton from "@/atoms/buttons/primary/index.astro"
import Link from "@/atoms/links/index.astro"
import HeadingTwoOrangeUppercase from "@/atoms/heading/two/orange/uppercase/index.astro"

const {

    data,
    dm_services,
    dm_strategy,
    dm_planning,
    dm_management,
    dm_audits

} = Astro.props

const html = marked.parse(data.sub_title)
---
<section class="py-16 md:py-28 bg-gradient-to-b from-[#303236] to-[#130904]">
    <Container>
        <section class="space-y-10">
            <HeadingTwoOrangeUppercase>{ data.title }</HeadingTwoOrangeUppercase>
            <section set:html={ html } class="markdown whiteh3 orangeh3" />
            <section class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-8 md:gap-y-16">
                <TitleDescription
                    title={ dm_services.title }
                    description={ dm_services.description }
                    order={ 1 }
                />
                <TitleDescription
                    title={ dm_strategy.title }
                    description={ dm_strategy.description }
                    order={ 2 }
                />
                <TitleDescription
                    title={ dm_planning.title }
                    description={ dm_planning.description }
                    order={ 3 }
                />
                <TitleDescription
                    title={ dm_management.title }
                    description={ dm_management.description }
                    order={ 4 }
                />
                <TitleDescription
                    title={ dm_audits.title }
                    description={ dm_audits.description }
                    order={ 5 }
                />
                <Link href={ data.button_link } aria_label="">
                    <PrimaryButton >{ data.button_title }</PrimaryButton>
                </Link>
            </section>
        </section>
    </Container>
</section>
