---
// IMPORTS MARKED
import { marked } from "marked"

// IMPORTS ASTRO LAYOUTS
import Container from "../../layouts/Container.astro"

// IMPORTS ASTRO ATOMS
import Button from "../../atoms/Button.astro"

const { data } = Astro.props
const html = marked.parse(data.title)
---
<Container>
    <section class="h-full w-full flex flex-col gap-10 items-center justify-center py-10 md:py-10 md:pb-20 2xl:px-52 md:mt-28">
        <div class="md:px-16">
            <section set:html={ html } class="markdown h1 orangeh1 leading-loose" />
        </div>
        <p class="font-lato text-white text-lg md:text-3xl font-light text-center !leading-normal">{ data.description }</p>
        <div class="pt-6">
            <Button href={ data.button_link } aria_label="">{ data.button_title }</Button>
        </div>
    </section>
</Container>
