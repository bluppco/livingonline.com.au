---
// IMPORTS CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../../constants/cdn"

// IMPORTS ASTRO COMPONENTS
import AwardImage from "./AwardImage.astro"

const { data } = Astro.props

const images = data.images.sort(( a,b ) => a.order - b.order )
---
<section class="grid grid-cols-2 gap-8 md:flex md:gap-4 md:items-center md:justify-between bg-lo_zinc p-10">
    {

        images.map( ( value ) => {

            return(
                <div class="flex justify-center md:justify-start">
                    <AwardImage
                        src={ CDN_LINK + value.file + "?quality=" + IMAGE_QUALITY }
                        alt=""
                    />
                </div>
            )

        })

    }
</section>
