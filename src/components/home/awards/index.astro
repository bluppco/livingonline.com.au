---

// IMPORTS ASTRO COMPONENTS
import AwardImage from "@/components/home/awards/award-image/index.astro"

// GET ASTRO PROPS
const {

    CDN,
    data,
    PROJECT

} = Astro.props

// SORTS IMAGES ARRAY
const images = data.images.sort(( a,b ) => a.order - b.order )

---
<section class="grid grid-cols-2 gap-8 md:flex md:gap-4 md:items-center md:justify-between bg-lo_zinc p-10">
    {

        images.map( ( value ) => {

            return(
                <div class="flex justify-center md:justify-start">
                    <AwardImage
                        alternative_text=""
                        CDN={ CDN }
                        PROJECT={ PROJECT }
                        source={ value.file }
                    />
                </div>
            )

        })

    }
</section>
