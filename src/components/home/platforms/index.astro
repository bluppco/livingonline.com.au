---

// IMPORTS ASTRO ATOMS
import PictureContain from "@/atoms/picture/contain/index.astro"
import HeadingTwoCenter from "@/atoms/heading/two/center/index.astro"

// GET ASTRO PROPS
const {

    CDN,
    data,
    PROJECT

} = Astro.props

// SORTS IMAGES ARRAY
const images = data.images.sort( ( a,b ) => a.order - b.order )

---
<section class="py-16 md:py-28 space-y-20 px-4 md:px-20 bg-lo_zinc">
    <HeadingTwoCenter>{ data.title }</HeadingTwoCenter>
    <div class="grid grid-cols-2 md:grid-cols-5">
        {

            images.map( ( value, index ) => {

                return(
                    <div class="w-full h-16 md:h-28 relative">
                        {

                            index > 4 &&
                            <div class="w-[80%] absolute h-px bg-zinc-200 left-[10%]"></div>

                        }
                        {

                            index % 5 !== 0 &&
                            <div class="h-[80%] absolute w-px bg-zinc-200 left-0 top-[10%]"></div>

                        }

                        <PictureContain
                            alternative_text=""
                            CDN={ CDN }
                            image_width="320"
                            PROJECT={ PROJECT }
                            source={ value.file }
                        />
                    </div>
                )

            })

        }
    </div>
</section>
